{
  "expo": {
    "name": "swaram-app",
    "slug": "swaram",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.akashpr.swaramapp",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to capture sign language gestures and lip movements for real-time translation.",
        "NSMicrophoneUsageDescription": "This app may use the microphone for audio processing in sign language translation."
      }
    },
    "android": {
      "package": "com.akashpr.swaramapp", 
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "FLASHLIGHT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "ad24aaf9-2db2-40d7-9dfe-80e0c9a1b47d"
      }
    },
    "owner": "akash_pr"
  }
}
